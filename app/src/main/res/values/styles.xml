<resources>
    <!-- Estilo personalizado para el AlertDialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Fondo del diálogo -->
        <item name="android:background">#FFFFFF</item>
        <!-- Color del título -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Color del mensaje -->
        <item name="android:textColor">@color/blue</item>
        <!-- Estilo de los botones -->
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>

    <!-- Estilo para el botón positivo -->
    <style name="PositiveButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <!-- Estilo para el botón negativo -->
    <style name="NegativeButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">@color/red</item>
    </style>

    <!-- Estilo para el menú -->
    <style name="CustomMenuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/blue</item>
    </style>
</resources>
